{% if message %}
  <div class="fixed alert alert-{% if changed %}ok{% else %}error{% endif %}">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{ message }}
  </div>
{% endif %}
{% if changed %}
  <p class="text-centered">{{ _('Your new password') }}:</p>
  <h3 class="span3 text-centered">{{ new_password }}</h3></p>
{% else %}
  {{ form|safe }}
{% endif %}
