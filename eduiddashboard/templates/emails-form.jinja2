{% extends "templates/baseform.jinja2" %}

{% block form_generic_description %}
   {% trans %}<p>These list contain all your emails registered in the
   platform. You can set your primary movil by drag and drop the email
   to the upper position in the list.</p>
   <p>Remember, if you select a not verified email as your primary
   email, your level of assurance must be decreased.</p>
   {% endtrans %}
{% endblock %}

{% block extra_content %}
  <table class='table table-striped table-thin emails'>
    {% for email in emails %}
    <tr class='emailrow'>
        <td>
          <input type='radio' name='setprimary' value='{{email.email}}'
           title='{{_("Set this email as your primary email")}}'
           {% if email.email == primary_email %}checked{% endif %}/></td>

        <td class='email'>{{ email.email }}</td>

      {% if email.verified %}
        <td><i class="icon-ok"
               title='{{_("Already verified")}}'></i></td>
      {% else %}
        <td>
          <label>
            <i class='icon-refresh' title='{{_("Resend verification email")}}'></i>
            <input class='hide' type='radio' name='verify' value='{{email.email}}'>
          </label>
        </td>
      {% endif %}

        <td>
          <label>
            <i class='icon-remove' title='{{_("Remove this email")}}'></i>
            <input class='hide' type='radio' name='remove' value='{{email.email}}'>
          </label>
        </td>
    </tr>
    {% endfor %}
  </table>
  <button type='button'
          class='btn add-new' 
          data-toggle='button'>
        <i class='icon-plus'></i>
        {{_('Add a new email')}}</button>
{% endblock %}


{% block form_generic_form %}
  <div class='form-content hide'>
  {{ form|safe }}
  </div>
{% endblock %}
