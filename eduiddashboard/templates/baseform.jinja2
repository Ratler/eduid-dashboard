{% macro actions_url(action_url) -%}
    <span class="hide actions-url" data-url="{{ action_url }}" />
{%- endmacro %}

<div class='{{ formname }}-form-container {% block extraformclass %}{% endblock %}'>
   {% for message in request.session.pop_flash(queue='forms') %}
     <div class="alert alert-{{ message|get_flash_message_type }}">
       <button type="button" class="close" data-dismiss="alert">&times;</button>
       {{ message }}
     </div>
   {% endfor %}

   <div class='intro'>
   {% block form_generic_description %}
   {% endblock %}
   </div>

   {% block extra_content %}
   {% endblock %}

   {% block form_generic_form %}
   {{ form|safe }}
   {% endblock %}


   {% block extrajs %}
   <script>
       window.beforeSubmit = function () {};
   </script>
   {% endblock %}
</div>
